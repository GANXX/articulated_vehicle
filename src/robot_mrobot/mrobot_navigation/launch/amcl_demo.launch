<launch>
  <node pkg="pid" type="odom_pub" name="odom_pub"> 
    <param name="/use_sim_time" value="true" />
  </node>  

  <!-- Map server -->
  <arg name="map_file" default="$(find mrobot_navigation)/maps/test_house.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization -->
  <arg name="initial_pose_x" default="2.0"/>
  <arg name="initial_pose_y" default="5.0"/>
  <arg name="initial_pose_a" default="0.0"/>
  <arg name="custom_amcl_launch_file" default="$(find mrobot_navigation)/launch/include/robot_amcl.launch.xml"/> 

  <include file="$(arg custom_amcl_launch_file)">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <!-- Move base -->
 <include file="$(find mrobot_navigation)/launch/include/move_base_start.launch.xml"/>
</launch>
